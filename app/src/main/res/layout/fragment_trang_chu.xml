            android:id="@+id/fragmentalbumhot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </fragment>
        <fragment
            android:name="com.example.MusicApp.Fragment.Fragment_Bai_Hat_Hot"
            android:id="@+id/fragmentbaihathot"
